<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/roundstyle3"
    android:padding="25dp"
    tools:context=".dialogfragment.AddDrugDialogFragment">

    <Button
        android:id="@+id/removeCategory_btn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="카테고리 지우기"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:background="@drawable/roundstyle"
        android:stateListAnimator="@null"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/changeName_btn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:text="카테고리 이름 바꾸기"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:background="@drawable/roundstyle"
        android:stateListAnimator="@null"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/removeCategory_btn" />

    <Button
        android:id="@+id/addDetail_btn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/roundstyle"
        android:stateListAnimator="@null"
        android:text="알약 추가"
        android:textSize="20sp"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/changeName_btn" />

    <Button
        android:id="@+id/removeDetail_btn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:text="알약 지우기"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:background="@drawable/roundstyle"
        android:stateListAnimator="@null"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/addDetail_btn" />]
</androidx.constraintlayout.widget.ConstraintLayout>