<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="25dp"
        android:background="#e4e4e4"
        tools:context=".dialogfragment.AddDrugDialogFragment">

    <Button
            android:id="@+id/removeCategory_btn"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:text="Remove Catecory"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <Button
            android:id="@+id/changeName_btn"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:text="Change Name"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/removeCategory_btn" />

    <Button
            android:id="@+id/removeDetail_btn"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:text="Remove Detail"
            android:layout_marginTop="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/changeName_btn" />
</androidx.constraintlayout.widget.ConstraintLayout>